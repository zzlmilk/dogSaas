<div id="reset-view">

    <div id="signheader-content"></div>

    <div class="il_wrap" id="reset-view-content" style="margin-top: 50px;">
        <div class="il_box">
            <form class="form" id="form-reset" onsubmit="return false">
                <div class="il_body">
                    <h4>Reset Your Password</h4>
                    <p id="default_tip" style="font-weight: bold">
                        Enter the email address associated with your account and we will send you the verification email.<br>
                        Click the link in the mail to reset your password.
                    </p>

                    <div class="form-group email">
                        <input type="text" id="email" class="form-control" />
                        <p style="display:none;" class="null_err" id="email_null_tip">*Enter your email address</p>
                        <p style="display:none;" class="null_err" id="email_format_tip">*Email invalid.</p>
                    </div>
                    <div class="spacer"></div>
                </div>

                <div  class="btn  btnBlueE btn-block" id="btn-reset">Send Verification Email</div>
            </form>
        </div>
    </div>

    <div id="signfooter-content"></div>

</div>