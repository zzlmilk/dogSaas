<div class="il_box login_box">
    <form id="login_form">
    <div class="il_body">
        <h4>{{l10n "Sign in"}}</h4>
        <div class="form-group">
            <label class="sr-only" for="username">登录</label>
            <input class="form-control" id="email" autofocus="autofocus" type="email" name="email" placeholder="请输入邮箱">
            <p style="display: none;" class="null_err" id="email_null_tip">*请输入邮箱</p>
        </div>
        <div class="form-group">
            <label class="sr-only" for="password">Email address</label>
            <input class="form-control" id="password" type="password" name="password" placeholder="密码">

            <p style="display: none;" class="null_err" id="password_null_tip">*请输入密码</p>
        </div>
    </div>
    <div class="il_btn clearfix">
        <button type="button" id="loginBtn" class="btn btnBlueE btn-block">登录</button>
        <a href="#reset" class="retrieve">忘记密码</a>
        <a href="#signup" class="reg">注册账户</a>
    </div>

    
    </form>
</div>


    

    





